body {
    font: 300 15px/1.4 PingFang SC, Helvetica Neue, Helvetica, Microsoft YaHei, Arial, sans-serif;
    max-width: 600px;
    margin: 0px auto;
}

.banner {
    height: 66px;
    background: #fff;
    // display: none;

    .banner-bg {
        background: #fff;
        z-index: 1001;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 66px;
        box-sizing: border-box;
    }

    .banner-wrapper {
        height: 100%;
        background-color: rgba(24, 195, 170, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0px 15px;

        .logo {
            width: 40px;
            height: 40px;
            background: #fff;
            border-radius: 8px;
            border-width: 1px;
            border-style: solid;
            border-color: rgb(242, 242, 242);
            display: flex;
            align-items: center;
            justify-content: center;

            img {
                width: 80%;
            }
        }

        .text {
            flex: 1;
            color: rgb(24, 195, 170);
            font-size: 15px;
            font-weight: 500;
            margin-left: 12px;
        }

        .open {
            display: inline-block;
            box-sizing: border-box;
            padding: 8px 1.5em 8px;
            font-size: 18px;
            text-align: center;
            text-decoration: none;
            white-space: nowrap;
            border: .5px solid rgb(242, 242, 242);
            border-radius: 999px;
            width: 80px;
            height: 30px;
            font-size: 13px;
            font-weight: 500;
            padding: 5px;
            color: #fff;
            background: rgb(24, 195, 170);
            border-color: rgb(24, 195, 170);
        }
    }
}

.search {
    background: #fff;
    padding: 16px 13px;
    padding-top: 15px;
    color: #aaa;
    // box-sizing: border-box;

    .search-wrap {
        background: #f2f2f2;
        border-radius: 999px;
        height: 36px;
        display: flex;
        font-size: 14px;
        align-content: center;
        justify-content: left;
        text-decoration: none;
        color: rgb(51, 51, 51);

        span {
            width: 21px;
            height: 21px;
            font-size: 21px;
            display: inline-block;
            color: #666;
            // border: 1px solid #000;
            padding: 6px;
        }

        .text {
            flex: 1;
            align-self: center;
        }
    }
}

.collections {
    // display: flex;
    background: #fff;
    overflow: hidden;

    .collections-hiden-scroll {
        white-space: nowrap;
        margin-bottom: -33px;
        padding: 0 0 35px;
        overflow-x: scroll;
        display: flex;

    }

    .collections-scroll {
        display: flex;
        white-space: nowrap;
    }

    .collection {
        display: block;
        box-sizing: border-box;
        padding: 16px;
        position: relative;
        width: 150px;
        min-width: 150px;
        margin-left: 0px;
        margin-top: 0px;
        margin-right: 10.5px;
        font-size: 13px;
        height: 200px;
        white-space: initial;
        border-radius: 5px;
        background-position: center top, center center;
        background-repeat: no-repeat, no-repeat;

        &:first-child {
            margin-left: 15px;
        }

        .title {
            font-size: 18px;
            font-weight: 600;
            margin: 0;
            margin-bottom: 6px;
        }

        .sub-title {
            vertical-align: middle;
            font-size: 12px;
        }

        .avatars {
            display: flex;
            flex-direction: row-reverse;
            position: absolute;
            bottom: 16px;
            right: 16px;

            img {
                box-sizing: border-box;
                width: 30px;
                height: 30px;
                background: rgb(242, 242, 242);
                border-width: 1px;
                border-style: solid;
                border-color: rgb(242, 242, 242);
                border-image: initial;
                border-radius: 99px;
                margin-right: -5.5px;
            }
        }
    }

    .book {
        margin-right: 15px;
        display: block;
        width: 150px;
        min-width: 150px;
        height: 200px;
        margin-right: 15px;
        background: #fffde7;
        border: 1px solid #efedd9;
        border-radius: 5px;
        color: #333;
        display: flex;
        flex-direction: column;
        align-items: center;

        .icon {
            border-radius: 50%;
            width: 99px;
            height: 99px;
            background: rgb(250, 244, 217);
            margin-top: 24px;
            display: flex;
            align-items: center;
            // justify-content: center;
            justify-content: space-around;
        }

        .text {
            font-size: 18px;
            font-weight: 500;
            margin-top: 16px;
        }
    }
}

.categories {
    // display: flex;
    // border: 1px solid #000;
    white-space: nowrap;
    overflow: auto;
    background: #fff;
    height: 66px;
    overflow: hidden;


    .catagory-hidden-scroll {
        display: flex;
        padding-left: 15px;
        padding: 16px 0 35px;
        overflow: scroll hidden;

        .catagory-scroll {
            display: flex;
            padding: 0 15px;
        }
    }

    .category {
        // flex: 0 0 0%;
        position: relative;
        margin-right: 10px;
        height: 36px;
        background-color: rgb(242, 242, 242);
        color: rgb(170, 170, 170);
        vertical-align: middle;
        line-height: 36px;
        font-weight: 400;
        padding: 0px 15px;
        border-radius: 5px;

        &.active {
            color: rgb(255, 255, 255);
            background-color: rgb(214, 186, 140);
        }

        a {
            color: inherit;
            text-decoration: none;
            background: #0000;
            text-decoration: none;
            outline: none;
        }

        .icon {
            position: absolute;
            height: 0px;
            bottom: 0px;
            left: 50%;
            transform: translateX(-50%);
        }

    }
}

.books {
    min-height: 100vh;
    background: #fff;
    margin-bottom: 50px;

    .book {
        display: flex;
        padding: 10px 15px;
        background: #fff;
        border-bottom: .5px solid rgb(242, 242, 242);

        .cover {
            width: 90px;
            height: 128px;

            img {
                width: 90px;
                height: 128px;
            }
        }

        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
            margin-left: 12px;

            .header {
                display: flex;
                flex: 1;
                justify-content: space-between;

                .left {
                    .category {
                        margin-bottom: 10px;
                        display: inline-block;
                        font-size: 10px;
                        line-height: 1.4;
                        padding: 2px 4px;
                        border-radius: 2px;
                        color: rgb(144, 202, 200);
                        background: rgba(144, 202, 200, 0.2);

                    }

                    .title {
                        margin: 0;
                        margin: -.1em 0 0;
                        font-size: 16px;
                        font-weight: 400;
                    }

                    .authors {
                        color: rgb(170, 170, 170);
                        margin-top: 4px;
                        align-items: center;
                        margin-top: 4px;
                        color: rgb(102, 102, 102);
                        font-size: 12px;
                    }

                    .rating {
                        color: rgb(214, 186, 140);
                        margin-top: 5px;
                        font-size: 12px;

                    }
                }

                .right {
                    position: relative;
                    box-sizing: border-box;
                    width: 45px;
                    height: 45px;
                    padding-left: 15px;

                    img {
                        display: inline-block;
                        vertical-align: top;
                        box-sizing: border-box;
                        width: 30px;
                        height: 30px;
                        background: rgb(242, 242, 242);
                        border-width: 1px;
                        border-style: solid;
                        border-color: rgb(242, 242, 242);
                        border-image: initial;
                        border-radius: 99px;
                        overflow: hidden;
                    }

                    &::before {
                        content: '';
                        position: absolute;
                        left: -11px;
                        top: 18px;
                        display: block;
                        width: 60px;
                        height: 15px;
                        border-top: 1px solid rgb(242, 242, 242);
                        background: #fff;
                        -webkit-transform: rotate(45deg);
                        transform: rotate(45deg);
                    }
                }
            }

            .summary {
                display: flex;
                align-items: center;
                justify-content: space-between;
                margin-top: 5px;

                .price {
                    margin: 2px 0px;
                    display: flex;
                    align-items: center;

                    .market {
                        font-size: 18px;
                        font-weight: normal;

                        .suffix {
                            font-size: 13px;
                            margin-left: 3px;
                            font-weight: 300;
                        }
                    }

                    .discount {
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        box-sizing: border-box;
                        height: 18px;
                        padding: 0 6px;
                        color: rgb(214, 186, 140);
                        font-weight: 400;
                        border: .5px solid rgb(214, 186, 140);
                        border-radius: 4px;
                        white-space: nowrap;
                        margin-left: 6px;
                        margin-right: 6px;
                        color: rgb(242, 129, 129);
                        border-color: rgb(242, 129, 129);
                        font-size: 12px;
                    }


                }

                .close {
                    display: flex;
                    align-content: flex-end;
                    justify-content: center;
                }
            }
        }
    }
}

.tabbar {
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1002;
    border-top: .5px solid rgb(223, 223, 223);

    a {
        position: relative;
        flex: 1;
        display: flex;
        flex-direction: column;
        color: #666;
        text-decoration: none;
        justify-content: center;
        align-items: center;
        height: 50px;

        [class*="dzy-icon-"] {
            width: 23px;
            height: 23px;
            display: inline-block;
            font-size: 23px;
        }

        .text {
            margin-top: 4px;
            font-size: 12px;

        }

        .count {
            position: absolute;
            top: -3px;
            left: 50%;
            margin-left: 5px;
            box-sizing: border-box;
            height: 18px;
            color: #fff;
            font-size: 12px;
            font-weight: 400;
            line-height: 18px;
            text-align: center;
            background: rgb(242, 129, 129);
            border-radius: 9px;
            transition: transform .2s;
            transform-origin: center;
            padding: 0 .66em;
        }

        &.active {
            color: #18c3aa;
        }
    }
}