                this.couponList=res.data.data;
                console.info(res.data.data);
                if(this.couponList.length==0){
                     this.$message('这种优惠券还没有给用户发送过，快去发几张试试！');        
                }
            })
            .catch((res)=>{
                console.info(res);
            })
        }
    },
    created(){
        this.axios.get("/manage/coupon")
        .then((res)=>{
